{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "strict": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "src",
        "allowJs": true,
        "types": [
            "node"
        ],
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
        "test"
    ]
}