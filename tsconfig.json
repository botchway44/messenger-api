{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": "src",
        "allowJs": true,
        "types": [
            "node",
            "reflect-metadata"
        ],
        "target": "es5",
        "lib": [
            "es6"
        ],
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
        "test"
    ]
}